@import "variables.styl"
@import "mixins.styl"

body
    font-family: font-family-body
    line-height: line-height-normal
    margin: 0
    padding: 0
    background: background-gradient
    transition: background-color 0.5s ease

header
    flex-center()
    header-style()

main
    display: flex
    width: 100%

.section-main
    margin-top: 30px
    margin-left: 20px
    margin-right: 30px
    width: 75%

.section-first
    flex-center()
    margin-bottom: 30px
    font-family: font-family-heading
    section-style()
    img
        width: 500px
        height: 370px
        margin-right: 15px
    article
        flex: 1
    h1
        margin: 0 0 5px
        font-size: font-size-large
        color: primary-color
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2)
    span
        display: block
        margin-bottom: 10px
        color: #7f8c8d

.section-second
    flex-center()
    gap: 20px
    margin-bottom: 30px
    font-family: font-family-heading
    section-style()
    article
        flex: 1
    h1
        margin: 0 0 5px
        font-size: font-size-large
        color: primary-color
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2)
    span
        display: block
        margin-bottom: 10px
        color: #7f8c8d

.image-section-second
    display: flex
    img
        width: 250px
        height: auto

.section-third
    flex-center()
    margin-bottom: 30px
    font-family: font-family-heading
    section-style()
    img
        width: 500px
        height: 370px
        margin-right: 15px
    article
        flex: 1
    h1
        margin: 0 0 5px
        font-size: font-size-large
        color: primary-color
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2)
    span
        display: block
        margin-bottom: 10px
        color: #7f8c8d

.section-aside
    margin-top: 30px
    width: 20%
    h2
        font-size: font-size-medium
        color: #2c3e50
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2)
        margin-bottom: 10px
        padding-bottom: 5px
        border-bottom: 2px solid secondary-color
    p
        font-size: 1em
        line-height: 1.6
        color: #34495e
        margin-bottom: 20px
    section
        background-color: rgba(255, 255, 255, 0.8)
        padding: 15px
        border-radius: 8px
        margin-bottom: 20px
        transition: transform 0.3s ease-in-out
        &:hover
            transform: translateY(-5px)
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2)

@media (max-width: 1200px)
    .section-first, .section-second, .section-third
        flex-direction: column
        align-items: center

    .section-first img,
    .section-second img,
    .section-third img
        margin: 0 0 15px 0
        width: 100%
        height: auto

    .image-section-second img
        padding-left: 0
        width: 50%

    .section-aside
        padding-right: 20px

@media (max-width: 768px)
    main
        display: flex
        flex-direction: column
        align-items: center
        justify-content: center
        width: 100%

    .section-main
        width: 90%
        padding-left: 10px

    .section-first h1,
    .section-second h1,
    .section-third h1
        font-size: 2.0em

    .section-aside
        margin-top: 0
        width: 90%
        padding-left: 20px